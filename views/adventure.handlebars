<!-- adventure.handlebars -->
 <h1>Adventure</h1>
  <img src="" alt="">

{{#each questions}}
<section class="questions-ex"  data-id="{{id}}">
    <h2>{{text}}</h2>

    <select id="let's play">
        {{#each answers}}
            <option 
                value="{{answerValue}}"
                data-qid="{{questionId}}"
                data-aid="{{answerId}}"
                style="display:none;">
                {{answerValue}}
            </option>

        {{/each}}

    </select>
</section>
{{/each questions}}
  <optgroup label="Next Evolve">
    {{#each nextEvolve}}
      <option value="{{this}}">{{this}}</option>
    {{/each}}
  </optgroup>
</select>

<h1>World Chat</h1>
<pre id="messages" style="overflow: scroll"></pre>
<input type="text" id="messageBox" placeholder="Type your message here">
<button id="send" title="Send">Send Message</button>


<script src="./js/adventure.js"></script>